{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base", "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "prettier"
    ],
    "rules": {
        "semi": [ "error", "never"],
        "no-console" : "off",
        "indent" : ["error", 4],
        "prettier/prettier" : "error"
    },
    "ignorePatterns": "webpack.config.js"
}
